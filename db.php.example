<?php
// db.php - Database configuration
// NOTE: This file contains sensitive information and should not be committed to version control

// Database connection details
$db_host = getenv('DB_HOST') ?: 'localhost';
$db_name = getenv('DB_NAME') ?: 'truck_tracker';
$db_user = getenv('DB_USER') ?: 'root';
$db_pass = getenv('DB_PASS') ?: '';

// Steam API Key (optional but recommended)
// Get your key from: https://steamcommunity.com/dev/apikey
// Set via environment variable STEAM_API_KEY or define below
if (!defined('STEAM_API_KEY')) {
    define('STEAM_API_KEY', getenv('STEAM_API_KEY') ?: '');
}

// Create PDO connection
try {
    $pdo = new PDO(
        "mysql:host={$db_host};dbname={$db_name};charset=utf8mb4",
        $db_user,
        $db_pass,
        [
            PDO::ATTR_ERRMODE => PDO::ERRMODE_EXCEPTION,
            PDO::ATTR_DEFAULT_FETCH_MODE => PDO::FETCH_ASSOC,
            PDO::ATTR_EMULATE_PREPARES => false,
        ]
    );
} catch (PDOException $e) {
    // Log the error but don't expose details to users
    error_log('Database connection failed: ' . $e->getMessage());
    die('Database connection failed. Please check your configuration.');
}
